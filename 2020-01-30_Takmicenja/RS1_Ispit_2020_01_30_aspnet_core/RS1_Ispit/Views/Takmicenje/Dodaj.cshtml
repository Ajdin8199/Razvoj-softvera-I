
@{
    ViewData["Title"] = "Dodaj";
}
@model TakmicenjeDodajVM
<br />
<form asp-action="Snimi">
    <input type="hidden" asp-for="SkolaDomacinId" />
    <label>Škola domaćin: </label>
    <span>@Model.SkolaDomacin</span>
    <br />
    <label>Predmet: </label>
    <select asp-for="PredmetId" asp-items="@Model.Predmeti" class="form-control"></select>
    <label>Razred: </label>
    <select class="form-control" asp-for="Razred">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
    </select>
    <label>Datum: </label>
    <input asp-for="Datum" class="form-control"/>
    <br />  
    <input class="btn btn-primary" type="submit" value="Snimi"/>
</form>
