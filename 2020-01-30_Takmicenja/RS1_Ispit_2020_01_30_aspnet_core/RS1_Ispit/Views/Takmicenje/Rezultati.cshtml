
@{
    ViewData["Title"] = "Rezultati";
}
@model TakmicenjeRezultatiVM

    <br />
<div>
    <h4>Škola domaćin: @Model.SkolaDomacin</h4>
    <h4>Predmet: @Model.Predmet</h4>
    <h4>Razred: @Model.Razred</h4>
    <h4>Datum: @Model.Datum</h4>
</div>
@if (Model.Zakljucano)
{
    <span>Zaključano</span>
}
else
{
    <a class="btn btn-primary" asp-action="Zakljucaj" asp-route-TakmicenjeId="@Model.TakmicenjeId">Zaključaj</a>
}
<br />
<br />
<div id="ajaxDiv" style="border:1px solid black; padding:10px;"></div>
<br />
<a class="btn btn-primary" asp-action="Dodaj" asp-route-SkolaDomacinId="@Model.SkolaDomacinId">Novo takmičenje</a>

<script>
    $(function () {
        $.get("/Ajax/TakmicenjeStavke?TakmicenjeId=@Model.TakmicenjeId", function (data) {
            $("#ajaxDiv").html(data);
        })
    })
</script>