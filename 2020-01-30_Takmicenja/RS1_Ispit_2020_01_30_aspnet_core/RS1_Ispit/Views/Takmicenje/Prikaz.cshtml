
@{
    ViewData["Title"] = "Prikaz";
}
@model TakmicenjePrikazVM

<h2>Škola domaćin: @Model.SkolaDomacin</h2>
<h2>Razred: @Model.Razred</h2>

<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>
                Tamičenje
                ID
            </th>
            <th>Predmet</th>
            <th>Razred</th>
            <th>Datum</th>
            <th>
                Broj
                učesnika
                koji nisu
                pristupili
            </th>
            <th>
                Najbolji učesnik
                (Škola | Odjeljenje
                | Ime i prezime)
            </th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.rows)
        {
            <tr>
                <td>@x.TakmicenjeId</td>
                <td>@x.Predmet</td>
                <td>@x.Razred</td>
                <td>@x.Datum</td>
                <td>@x.BrojNisuPristupili</td>
                <td>@x.SkolaNajUcenika | @x.OdjeljenjeNajUcenika | @x.NajUcenik</td>
                <td><a asp-action="Rezultati" asp-route-TakmicenjeId="@x.TakmicenjeId">Rezultati</a></td>
            </tr>
        }
    </tbody>
</table>
<br />
<a asp-action="Dodaj" asp-route-SkolaDomacinId="@Model.SkolaDomacinId" class="btn btn-primary">Dodaj</a>

