
@{
    ViewData["Title"] = "Dodaj";
}
@model OdrzanNastavaDodajVM
<form asp-action="Snimi">
    <input type="hidden" asp-for="NastavnikId"/>
    <label>Nastavnik</label>
    <span>@Model.Nastavnik</span>
    <br />
    <label>Datum</label>
    <input asp-for="Datum" class="form-control"/>
    <label>Skola/Odjeljenje/Predmet </label>
    <select asp-for="PredajePredmetId" asp-items="@Model.Skola_Odjeljenje_Predemet" class="form-control"></select>
    <label>Sadržaj časa</label>
    <textarea asp-for="SadrzajCasa" class="form-control"></textarea>
    <br />
    <input type="submit" value="Snimi" class="btn btn-primary"/>
</form>
